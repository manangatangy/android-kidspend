<?xml version="1.0" encoding="utf-8"?>
<!-- This is the view for each entry in the list of spends
    (as shown in the spend_manager).
 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/repeat_entry_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView android:text="F/NIGHT"
        android:id="@+id/repeatEntryPeriodText"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dip"
        android:layout_width="63dip"
        android:layout_height="wrap_content"/>
    <TextView android:text="30 MAY 2012"
        android:id="@+id/repeatEntryNextDateText"
        android:layout_toRightOf="@+id/repeatEntryPeriodText"
        android:paddingLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:text="category"
        android:id="@+id/repeatEntryTypeText"
        android:layout_toRightOf="@+id/repeatEntryNextDateText"
        android:paddingLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:text="123"
        android:id="@+id/repeatEntryAmountText"
        android:layout_alignParentRight="true"
        android:paddingRight="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
